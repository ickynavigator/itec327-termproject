            "stepPicture": {
              "type": "array",
              "uniqueItems": true,
              "minItems": 3,
              "maxItems": 4,
              "items": {
                "type": "string",
                "enum": ["testimage1", "testimage2"]
              }
            }
          },
          "required": ["description", "stepPicture"]
        }
      }
    },
    "required": [
      "name",
      "description",
      "calories",
      "difficulty",
      "rating",
      "timeToPrep",
      "timeToCook",
      "tag",
      "class",
      "image",
      "ingredient",
      "steps"
