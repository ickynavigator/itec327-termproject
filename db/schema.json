{
  "type": "array",
  "uniqueItems": true,
  "minItems": 10,
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 10,
        "maxLength": 20
      },
      "description": {
        "type": "string",
        "minLength": 300,
        "maxLength": 500
      },
      "calories": {
        "type": "number",
        "multipleOf": "5",
        "minimum": 50,
        "maximum": 500
      },
      "difficulty": {
        "type": "number",
        "minimum": 1,
        "maximum": 10
      },
      "rating": {
        "type": "number",
        "minimum": 1,
        "maximum": 5
      },
      "timeToPrep": {
        "type": "number",
        "multipleOf": "5",
        "minimum": 10,
        "maximum": 60
      },
      "timeToCook": {
        "type": "number",
        "multipleOf": "5",
        "minimum": 10,
        "maximum": 60
      },
      "tag": {
        "type": "array",
        "uniqueItems": true,
        "minItems": 4,
        "maxItems": 6,
        "items": {
          "type": "string",
          "minLength": 10,
          "maxLength": 10
        }
      },
      "class": {
        "type": "array",
        "uniqueItems": true,
        "minItems": 4,
        "maxItems": 6,
        "items": {
          "type": "string",
          "enum": ["oven", "fried", "mixed", "no cook"]
        }
      },
      "image": {
        "type": "array",
        "uniqueItems": true,
        "minItems": 3,
        "maxItems": 4,
        "items": {
          "type": "string",
          "enum": ["testimage1", "testimage2"]
        }
      },
      "ingredient": {
        "type": "array",
        "uniqueItems": true,
        "minItems": 4,
        "maxItems": 6,
        "items": {
          "type": "object",
          "properties": {
            "amount": {
              "type": "number",
              "multipleOf": "5",
              "minimum": 50,
              "maximum": 200
            },
            "unit": {
              "type": "string",
              "enum": ["g", "mg"]
            },
            "name": {
              "type": "string",
              "minLength": 10,
              "maxLength": 15
            }
          },
          "required": ["amount", "unit", "name"]
        }
      },
      "steps": {
        "type": "array",
        "uniqueItems": true,
        "minItems": 5,
        "maxItems": 10,
        "items": {
          "type": "object",
